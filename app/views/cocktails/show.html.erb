<h1><%= @cocktail.name %></h1>
<%= link_to 'Back', cocktails_path %><%= link_to 'Delete', cocktail_path(@cocktail), data: {:confirm => 'Are you sure?'}, :method => :delete %>
<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.description %><%= link_to 'Delete', destroy_dose_path(dose), data: {:confirm => 'Are you sure?'}, :method => :delete %></li>
  <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, input_html: { class: 'select2' } %>
  <%= f.button :submit %>
<% end %>
